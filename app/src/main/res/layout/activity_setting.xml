<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.psmStudio.dodamdodam.SettingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/ll0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/termsborder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        android:orientation="horizontal">

        <Button
            android:id="@+id/introduceBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="start|center"
            android:textColor="@color/white"
            android:onClick="mOnClick"
            android:text="도담도담 소개"
            android:textSize="17sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll0"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll0"
        android:background="@drawable/termsborder"
        android:orientation="horizontal">

        <Button
            android:id="@+id/privacyBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="start|center"
            android:onClick="mOnClick"
            android:textColor="@color/white"
            android:text="개인정보 처리방침"
            android:textSize="17sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll1"
        android:background="@drawable/termsborder"
        android:orientation="horizontal">

        <Button
            android:id="@+id/contact_us"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:onClick="mOnClick"
            android:background="#00000000"
            android:textColor="@color/white"
            android:gravity="start|center"
            android:text="관리자에게 문의하기"
            android:textSize="17sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll2"
        android:background="@drawable/termsborder"
        android:orientation="horizontal">

        <Button
            android:id="@+id/userUpdateBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="@color/white"
            android:onClick="mOnClick"
            android:gravity="start|center"
            android:text="회원정보 수정"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll3"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll3"
        android:background="@drawable/termsborder"
        android:orientation="horizontal">

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="@color/white"
            android:onClick="mOnClick"
            android:gravity="start|center"
            android:text="로그아웃"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll4"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll4"
        android:background="@drawable/termsborder"
        android:orientation="horizontal">

        <Button
            android:id="@+id/unRegisterBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="@color/white"
            android:gravity="start|center"
            android:text="회원탈퇴"
            android:textSize="17sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/ll5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll5"
        android:background="@drawable/termsborder"
        android:orientation="horizontal">

        <Button
            android:id="@+id/versionTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="mOnClick"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="@color/white"
            android:gravity="start|center"
            android:text="버전 : 0.1"
            android:textSize="17sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>